guide_lines = function()
{
  d = 0.05w
  tl = (d, d)
  tr = (1w - d, d)
  bl = (d, 1h - d)
  br = (1w - d, 1h - d)

  put line(tr - tl) at tl
  put line(bl - tl) at tl
  put line(br - bl) at bl
  put line(br - tr) at tr
}

{
  color = #888888
  put guide_lines()
}

{
  color = #aaeeff
  put guide_lines()
}
